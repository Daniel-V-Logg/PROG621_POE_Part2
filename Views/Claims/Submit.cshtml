@model Contract_Monthly_ClaimSystem__CMCS_.Models.Claim

<h2>Submit Claim</h2>


<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Submit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="HoursWorked"></label>
        <input asp-for="HoursWorked" class="form-control" />
        <span asp-validation-for="HoursWorked" class="text-danger"></span> <!-- Validation message -->
    </div>
    <div class="form-group">
        <label asp-for="HourlyRate"></label>
        <input asp-for="HourlyRate" class="form-control" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span> <!-- Validation message -->
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span> <!-- Validation message -->
    </div>
    <div class="form-group">
        <label for="DocumentFile">Upload Document:</label>
        <input type="file" name="DocumentFile" class="form-control-file" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
